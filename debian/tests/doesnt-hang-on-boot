set +e

reboots=100

if [ -z ${ADT_REBOOT_MARK} ] ; then
    iteration=1
else
    iteration=$((ADT_REBOOT_MARK+1))
fi

if [ $((iteration)) -ge $((reboots)) ] ; then
    # Success
    echo "Successfully booted ${iteration} times"
    exit 0
else
    rm -fR ~/.cache/QML
    echo "Reboot #${iteration}"
    /tmp/autopkgtest-reboot ${iteration}
fi
